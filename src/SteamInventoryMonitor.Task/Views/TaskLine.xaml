<Page x:Class="SteamInventoryMonitor.Task.Views.TaskLine"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SteamInventoryMonitor.Task.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskLine" Loaded="pageLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="spItems" Margin="0,0,0,50"/>
        </ScrollViewer>
        <Button x:Name="btnRemove" Grid.Row="1" VerticalAlignment="Center" Width="150" HorizontalAlignment="Right" Margin="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="Remove"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
